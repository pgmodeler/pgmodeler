<!ELEMENT trigger (comment?,condition?,appended-sql?,prepended-sql?,function,columns?)>
<!ATTLIST trigger name CDATA #REQUIRED>
<!ATTLIST trigger alias CDATA #IMPLIED>
<!ATTLIST trigger firing-type CDATA #REQUIRED>
<!ATTLIST trigger per-line (true | false) "false">
<!ATTLIST trigger arguments CDATA #IMPLIED>
<!ATTLIST trigger ins-event (true | false) "false">
<!ATTLIST trigger del-event (true | false) "false">
<!ATTLIST trigger upd-event (true | false) "false">
<!ATTLIST trigger trunc-event (true | false) "false">
<!ATTLIST trigger protected (false|true) "false">
<!ATTLIST trigger deferrable (true | false) "false">
<!ATTLIST trigger defer-type CDATA #IMPLIED>
<!ATTLIST trigger ref-table CDATA #IMPLIED>
<!ATTLIST trigger table CDATA #IMPLIED>
<!ATTLIST trigger constraint (false|true) "false">
<!ATTLIST trigger sql-disabled (false|true) "false">
